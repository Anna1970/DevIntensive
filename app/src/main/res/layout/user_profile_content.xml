<?xml version="1.0" encoding="utf-8"?>
    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/width_match_parent_height_wrap_content"
        android:paddingTop="@dimen/size_greater_112"
        android:id="@+id/nested_scroll"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            style="@style/width_match_parent_height_wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <LinearLayout
                style="@style/liner_layout_list">
                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/ic_call_24dp"/>
                <LinearLayout
                    style="@style/liner_layout_list_center">
                    <android.support.design.widget.TextInputLayout
                        style="@style/width_match_parent_height_wrap_content">
                        <EditText
                            style="@style/edit_text"
                            android:id="@+id/phone"
                            android:inputType="phone"
                            android:hint="@string/profile.phone.hint"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <ImageView
                    style="@style/icon.right"
                    android:id="@+id/call_img"
                    android:src="@drawable/ic_phone_in_talk_24dp"/>
            </LinearLayout>

            <View
                style="@style/view_list"/>

            <LinearLayout
                style="@style/liner_layout_list">
                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/ic_email_24dp"/>
                <LinearLayout
                    style="@style/liner_layout_list_center">
                    <android.support.design.widget.TextInputLayout
                        style="@style/width_match_parent_height_wrap_content">
                        <EditText
                            style="@style/edit_text"
                            android:id="@+id/e_mail"
                            android:inputType="textEmailAddress"
                            android:hint="@string/profile.mail.hint"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <ImageView
                    style="@style/icon.right"
                    android:id="@+id/send_img"
                    android:src="@drawable/ic_send_24dp"/>
            </LinearLayout>

            <View
                style="@style/view_list"/>

            <LinearLayout
                style="@style/liner_layout_list">
                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/ic_vk"/>
                <LinearLayout
                    style="@style/liner_layout_list_center">
                    <android.support.design.widget.TextInputLayout
                        style="@style/width_match_parent_height_wrap_content">
                        <EditText
                            style="@style/edit_text"
                            android:id="@+id/vk"
                            android:inputType="text"
                            android:hint="@string/profile.vk.hint"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <ImageView
                    style="@style/icon.right"
                    android:id="@+id/vk_img"
                    android:src="@drawable/ic_visibility_24dp"/>
            </LinearLayout>

            <View
                style="@style/view_list"/>

            <LinearLayout
                style="@style/liner_layout_list">
                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/ic_github_box"/>
                <LinearLayout
                    style="@style/liner_layout_list_center">
                    <android.support.design.widget.TextInputLayout
                        style="@style/width_match_parent_height_wrap_content">
                        <EditText
                            style="@style/edit_text"
                            android:id="@+id/git"
                            android:inputType="text"
                            android:hint="@string/profile.github.hint"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <ImageView
                    style="@style/icon.right"
                    android:id="@+id/git_img"
                    android:src="@drawable/ic_visibility_24dp"/>
            </LinearLayout>

            <View
                style="@style/view_list"/>

            <LinearLayout
                style="@style/liner_layout_list">
                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/ic_account_circle_24dp"/>
                <LinearLayout
                    style="@style/liner_layout_list_center"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputLayout
                        style="@style/width_match_parent_height_wrap_content">
                        <EditText
                            style="@style/edit_text"
                            android:id="@+id/about"
                            android:inputType="textMultiLine"
                            android:hint="@string/profile.bio.hint"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                style="@style/view_list"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
