<?xml version="1.0" encoding="utf-8"?>

<app:LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  style="@style/liner_layout_top"
                  android:id="@+id/layout_top_grey"
                  app:layout_behavior=".util.CollapsingBehavior">

    <LinearLayout
        style="@style/liner_layout_inside.side">

        <TextView
            android:id="@+id/rating"
            style="@style/text_view_top.values"
            android:text="@string/profile.user_info.rating.dummy"/>
        <TextView
            style="@style/text_view_top"
            android:text="@string/profile.user_info.rating.hint"/>

    </LinearLayout>

    <View
        style="@style/view_top_vertical"/>

    <LinearLayout
        style="@style/liner_layout_inside.center">

        <TextView
            android:id="@+id/strings_count"
            style="@style/text_view_top.values"
            android:text="@string/profile.user_info.code_lines.dummy" />
        <TextView
            style="@style/text_view_top"
            android:text="@string/profile.user_info.code_lines.hint"/>

    </LinearLayout>

    <View
        style="@style/view_top_vertical"/>

    <LinearLayout
        style="@style/liner_layout_inside.side">

        <TextView
            android:id="@+id/projects_count"
            style="@style/text_view_top.values"
            android:text="@string/profile.user_info.project.dummy"/>
        <TextView
            style="@style/text_view_top"
            android:text="@string/profile.user_info.project.hint"/>

    </LinearLayout>

</app:LinearLayout>