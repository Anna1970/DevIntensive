<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_large_72"
                android:layout_marginTop="@dimen/size_greater_112">

    <android.support.design.widget.TextInputLayout
        style="@style/width_match_parent_height_wrap_content"
        android:layout_marginRight="@dimen/spacing_larger_72"
        android:layout_centerVertical = "true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile.github.hint"/>
        <TextView
            style="@style/edit_text"
            android:id="@+id/git_et"
            android:text="@string/profile.github.dummy"/>
    </android.support.design.widget.TextInputLayout>

    <ImageView
        style="@style/icon.right"
        android:src="@drawable/ic_visibility_24dp"
        android:layout_centerVertical = "true"
        android:layout_alignParentRight ="true"
        android:layout_alignParentEnd = "true"/>

</RelativeLayout>